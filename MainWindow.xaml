<Window x:Class="TodoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Todo App" Height="300" Width="400">
    <StackPanel>
        <TextBox x:Name="taskInput" Margin="10"/>
        <Button Content="Add Task" Margin="10" Click="AddTask"/>
        <ListBox x:Name="taskList" Margin="10"/>
    </StackPanel>
</Window>
